# 데이터베이스 설정
MONGODB_URI=mongodb://localhost:27017/kis_erp
SQLITE_PATH=./database/kis.db
POSTGRES_URL=postgresql://user:password@localhost:5432/kis_erp

# AI API 키
OPENAI_API_KEY=sk-your-openai-key
CLAUDE_API_KEY=sk-ant-your-claude-key
GEMINI_API_KEY=your-gemini-key
GROK_API_KEY=your-grok-key

# 이메일 설정
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SENDGRID_API_KEY=SG.your-sendgrid-key

# SMS 설정
SMS_API_KEY=your-sms-api-key
SMS_SENDER=KIS
SMS_SERVICE_URL=https://api.sms-provider.com

# Google 서비스
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-service-account.json
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id
GOOGLE_SHEETS_ID=your-sheets-id

# 보안 설정
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret

# 서버 설정
PORT=3000
NODE_ENV=development
API_VERSION=v1
CORS_ORIGIN=http://localhost:3001

# 로깅 설정
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# RAG 시스템
VECTOR_DB_URL=http://localhost:8001
KNOWLEDGE_BASE_PATH=./knowledge_base

# 관리자 설정
ADMIN_EMAIL=admin@koreanindustry.com
ADMIN_PASSWORD=change-this-password

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,xlsx,xls,doc,docx,jpg,jpeg,png,dwg,dxf

# Redis 캐시 (선택사항)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Webhook 설정
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_BASE_URL=https://your-domain.com/webhooks

# 백업 설정
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *

# Supabase 설정
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
DATABASE_URL=postgresql://postgres:password@db.your-project-ref.supabase.co:5432/postgres