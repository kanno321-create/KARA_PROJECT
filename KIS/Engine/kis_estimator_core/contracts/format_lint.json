{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KIS Format Lint",
  "type": "object",
  "required": ["lint_errors", "messages", "issues"],
  "properties": {
    "lint_errors": {"type": "integer"},
    "messages": {
      "type": "array",
      "items": {"type": "string"}
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {"type": "string"},
          "description": {"type": "string"},
          "where": {"type": "string"}
        }
      }
    }
  }
}
