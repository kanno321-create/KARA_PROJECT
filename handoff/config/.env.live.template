# KIS Estimator v1 - Environment Template
# Copy to .env and fill with actual values

# REQUIRED API Keys
PDF_API_KEY=YOUR_PDF_API_KEY_HERE
OCR_API_KEY=YOUR_OCR_API_KEY_HERE
CATALOG_API_KEY=YOUR_CATALOG_API_KEY_HERE

# Operation Mode
MODE=LIVE                    # LIVE or MOCK
ENVIRONMENT=production       # development, staging, production

# Service Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=4
RELOAD=false

# Logging
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR
LOG_FILE=/var/log/kis/estimator.log

# Performance
REQUEST_TIMEOUT=30
MAX_CONNECTIONS=100
CIRCUIT_BREAKER_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT=300

# Security
ENABLE_MASKING=true
DESKTOP_GUARD=true
AUDIT_LOG=true

# Paths
WORK_DIR=/app/KIS/Work
TEMPLATES_DIR=/app/KIS/Templates
EVIDENCE_DIR=/app/evidence

# Feature Flags
ENABLE_DIFF_VIEWER=true
ENABLE_AUTOFIX=true
ENABLE_INVENTORY_SCORING=true

# DO NOT COMMIT THIS FILE WITH REAL VALUES