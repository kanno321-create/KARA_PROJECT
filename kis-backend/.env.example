# KIS ERP Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1
API_BASE_PATH=/v1

# Database Configuration
DATABASE_URL="file:./dev.db"

# Features
ALLOW_MIXED_BRAND=false
EMAIL_SMTP=false
PDF_EXPORT=false

# Rate Limiting (Refined)
RATE_LIMIT_ESTIMATE_CREATE=30
RATE_LIMIT_ESTIMATE_VALIDATE=60
RATE_LIMIT_DEFAULT=60

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
EVIDENCE_SECRET=your-super-secret-key-for-evidence-signing-change-in-production
ADMIN_API_KEY=your-admin-api-key-change-in-production

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_REQUESTS=true

# Knowledge Version
RULES_VERSION=v1.0
TABLES_VERSION=v1.0

# Logging
LOG_LEVEL=debug

# Testing (copy to .env.test for test environment)
# DATABASE_URL="file:./test.db"
# NODE_ENV=test
# LOG_LEVEL=silent