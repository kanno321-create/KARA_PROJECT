# KIS ERP Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1
API_BASE_PATH=/v1

# Database Configuration
DATABASE_URL="file:./dev.db"

# Features
ALLOW_MIXED_BRAND=false
EMAIL_SMTP=false
PDF_EXPORT=false

# Rate Limiting
RATE_LIMIT_ESTIMATE=30
RATE_LIMIT_DEFAULT=60

# Knowledge Version
RULES_VERSION=v1.0
TABLES_VERSION=v1.0

# Logging
LOG_LEVEL=debug

