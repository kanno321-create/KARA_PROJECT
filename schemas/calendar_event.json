{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CalendarEvent",
  "type": "object",
  "required": ["event_id", "title", "start", "type", "status"],
  "properties": {
    "event_id": {
      "type": "string",
      "pattern": "^EVT-[0-9]{8}-[A-Z0-9]{6}$",
      "description": "Unique event identifier"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "start": {
      "type": "string",
      "format": "date-time"
    },
    "end": {
      "type": "string",
      "format": "date-time"
    },
    "attendees": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "email": {"type": "string", "format": "email"},
          "role": {"type": "string", "enum": ["required", "optional", "observer"]}
        }
      }
    },
    "type": {
      "type": "string",
      "enum": ["estimate_expiry", "order_deadline", "payment_due", "drawing_review", "delivery", "meeting", "maintenance"]
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tab": {"type": "string"},
          "path": {"type": "string"},
          "hash": {"type": "string"}
        }
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {"type": "string", "enum": ["png", "svg", "csv", "json"]},
          "path": {"type": "string"},
          "hash": {"type": "string"},
          "timestamp": {"type": "string", "format": "date-time"}
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["scheduled", "in_progress", "completed", "cancelled", "postponed"]
    },
    "notifications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "before_minutes": {"type": "integer"},
          "method": {"type": "string", "enum": ["email", "popup", "sms"]}
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_by": {"type": "string"},
        "created_at": {"type": "string", "format": "date-time"},
        "modified_at": {"type": "string", "format": "date-time"},
        "version": {"type": "string"}
      }
    }
  }
}