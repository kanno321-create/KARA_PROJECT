{
  "openapi": "3.1.0",
  "info": {
    "title": "KIS Health API",
    "version": "1.0.0"
  },
  "paths": {
    "/v1/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "required": ["ok", "ts"],
        "properties": {
          "ok": { "type": "boolean", "const": true },
          "ts": { "type": "string", "format": "date-time" }
        },
        "additionalProperties": false
      }
    }
  }
}
